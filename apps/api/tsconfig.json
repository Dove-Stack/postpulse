{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "bundler",

    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "emitDeclarationOnly": false,
    "isolatedModules": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
